@import 'https://fonts.googleapis.com/css?family=PT+Mono:400,900'
// @import 'https://fonts.googleapis.com/css?family=Josefin+Sans:700'

body
	font-family 'PT Mono', sans-serif
	min-width: 100vw
	min-height: 100vh
	display flex
	justify-content center
	margin 0

	
.container
	display flex
	width: 620px
	flex-direction column
	
.map
	position absolute
	background-image url('../images/map-insert.png')
	left 0
	width 100%
	height 300px
	margin-top -230px
	z-index -10
	
.title
	color #000000
	font-size 14px
	font-weight 400
	
.square 
	width 300px
	height 300px
	background-color rgba(250,220,76,.75)
	text-align right
	
.location
	font-size 2.5rem
	line-height 2rem
	margin-top 5rem
	margin-bottom: 3rem

a
	color black
	
.highlighter
	background-color rgba(250,220,76,1)

.here 
	position relative
	font-family 'Futura', 'PT Mono', sans-serif
	font-size 4rem
	font-weight bold
	top 8.2rem
	right 1.2rem
	line-height 5rem	

h3
	font-weight bold
	font-size 1.2rem
	margin-top 0.1rem
	margin-bottom 0.1rem
	
.insert 
	width 570px
	height 150px
	padding 15px
	border 1px solid #979797
